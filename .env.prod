# Production Environment Variables for ServiceSync

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=servicesync_prod
DB_USERNAME=servicesync_prod
DB_PASSWORD=your_secure_password_here

# Security Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_base64_encoded_here
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DATABASE=0

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080
LOG_LEVEL=WARN

# Feature Flags
ENABLE_ML=false
ENABLE_IOT=false
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=/app/uploads
DIET_SHEET_DIR=/app/uploads/diet-sheets
MAX_FILE_SIZE=10MB

# Email Configuration (if enabled)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@servicesync.co.za

# Business Rules
AUTO_COMPLETE_HOURS=24
MAX_MEAL_COUNT=100
MIN_MEAL_COUNT=1
TARGET_SERVING_RATE=0.6
MAX_TRAVEL_TIME=15
MAX_NURSE_RESPONSE=5
TRAVEL_TIME_THRESHOLD=900
NURSE_RESPONSE_THRESHOLD=300
COMPLETION_RATE_THRESHOLD=75

# Monitoring and Logging
LOG_FILE=/var/log/servicesync/servicesync.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30

# SSL Configuration (for production)
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/servicesync.crt
SSL_KEY_PATH=/etc/nginx/ssl/servicesync.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Tuning
HIKARI_MAX_POOL_SIZE=50
HIKARI_MIN_IDLE=10
REDIS_MAX_CONNECTIONS=20